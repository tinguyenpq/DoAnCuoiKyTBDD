<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ButtonContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivNone"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/eft_none" />

                <ImageView
                    android:id="@+id/ivMagicSkin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/magic_skin2" />

                <ImageView
                    android:id="@+id/ivOtherFeatured"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/light_color" />

                <ImageView
                    android:id="@+id/imgView5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/eft_sketch" />

                <ImageView
                    android:id="@+id/ivHDR"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hdr" />

                <ImageView
                    android:id="@+id/ivRotate"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/eft_rotate" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>