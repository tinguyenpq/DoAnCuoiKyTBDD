<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ButtonContainer"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivOtherFeatured"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/magic2" />

                <ImageView
                    android:id="@+id/ivMagicSkin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/magic_skin" />

                <ImageView
                    android:id="@+id/ivLightColor"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/light_color" />

                <ImageView
                    android:id="@+id/ivHDR"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                     android:src="@drawable/hdr"  />

                <ImageView
                    android:id="@+id/imgView5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/eff01" />
                <ImageView
                    android:id="@+id/imgView6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hdr" />
            </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>
    

</LinearLayout>
