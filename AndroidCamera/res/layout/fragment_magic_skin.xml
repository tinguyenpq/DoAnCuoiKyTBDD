<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivMagicSkinNatural"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/magic_skin_natural"
                android:contentDescription="Natual" />

            <ImageView
                android:id="@+id/ivMagicSkinBlue"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/magic_skin_blue" />

            <ImageView
                android:id="@+id/ivMagicSkinWarm"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/magic_skin_warm" />

            <ImageView
                android:id="@+id/ivMagicSkinBW"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/magic_skin_bw" />

            <ImageView
                android:id="@+id/ivMagicSkinHot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/magic_skin_hot" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>