<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="ButtonContainer"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <Switch
                android:id="@+id/swTapCapture"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="5dp"
                android:background="@drawable/custom_onclick_effect"
                android:text="Tap to capture" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <Switch
                android:id="@+id/swShutterSound"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="42dp"
                android:background="@drawable/custom_onclick_effect"
                android:text="Shutter sound" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <Switch
                android:id="@+id/swAskSave"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="5dp"
                android:background="@drawable/custom_onclick_effect"
                android:text="Ask to save" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <Switch
                android:id="@+id/swSaveLocation"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:background="@drawable/custom_onclick_effect"
                android:text="Save location"
                android:textOff="IN"
                android:textOn="MEM" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>