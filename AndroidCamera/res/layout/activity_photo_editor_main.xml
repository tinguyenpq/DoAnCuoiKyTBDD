<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackGroundView"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <fragment
        android:id="@+id/fragment_option_title"
        android:name="vn.tdt.androidcamera.fragment.OptionsTitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_weight="18.33"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivPhotoViewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/girl" />
    </LinearLayout>

    <fragment
        android:id="@+id/fragment_effect_list"
        android:name="vn.tdt.androidcamera.fragment.ListEffectOptionMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/fragment_filter_effect"
        android:name="vn.tdt.androidcamera.fragment.MagicSkinFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <fragment
        android:id="@+id/fragment_other_feature"
        android:name="vn.tdt.androidcamera.fragment.OtherFeatureFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
       <fragment
        android:id="@+id/fragment_rotate_effect"
        android:name="vn.tdt.androidcamera.fragment.RotateFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
      <fragment
        android:id="@+id/fragment_seekbar_option"
        android:name="vn.tdt.androidcamera.fragment.SeekBarOptionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <fragment
        android:id="@+id/fragment_save_or_discard_effect"
        android:name="vn.tdt.androidcamera.fragment.SaveOrDiscardEffectFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>